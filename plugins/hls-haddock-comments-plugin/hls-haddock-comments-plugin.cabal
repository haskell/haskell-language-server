cabal-version: 2.2
name:          hls-haddock-comments-plugin
version:       0.1.0.0
synopsis:      Haddock comments plugin for Haskell Language Server
description:
  Please see Haskell Language Server Readme (https://github.com/haskell/haskell-language-server#readme)

license:       Apache-2.0
license-file:  LICENSE
author:        Potato Hatsue
maintainer:    berberman@yandex.com
category:      Development
build-type:    Simple

library
  exposed-modules:  Ide.Plugin.HaddockComments
  hs-source-dirs:   src
  ghc-options:      -Wall -Wno-name-shadowing -Wredundant-constraints
  build-depends:
    , base                  >=4.12 && <5
    , containers
    , ghc
    , ghc-exactprint
    , ghcide
    , haskell-lsp-types
    , hls-plugin-api
    , text
    , unordered-containers

  default-language: Haskell2010
